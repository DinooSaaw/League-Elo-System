  "turretTakedownMultiplier": 10, // turret takedown multiplier
  "dragonKillMultiplier": 20, // dragon kill multiplier
  "baronKillMultiplier": 30, // baron kill multiplier

  // Lane vision advantage
  "visionScoreAdvantageLaneOpponent": 10, // vision score advantage over lane opponent

  // First blood/objective bonuses
  "firstBloodAssist": 15, // first blood assist bonus
  "firstBloodKill": 25, // first blood kill bonus
  "firstTowerAssist": 10, // first tower assist bonus
  "firstTowerKill": 20, // first tower kill bonus

  // Death penalty
  "deathPenalty": 100, // death penalty

