# League ELO System Environment Configuration
# Copy this file to .env and update with your values

# Riot Games API Key (required for match fetching)
# Get yours from: https://developer.riotgames.com/
RIOT_API_KEY=your_riot_api_key_here

# MongoDB Configuration (optional - defaults to local MongoDB)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=league_elo_system

# Debug Mode (optional)
# Set to true for detailed error logging
DEBUG=false

# Application Configuration (optional)
NODE_ENV=production
